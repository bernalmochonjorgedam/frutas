<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "/>

    <TextView
            android:id="@+id/familiaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Familia: "/>

    <TextView
            android:id="@+id/hidratosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hidratos: "/>

    <TextView
            android:id="@+id/proteinasTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proteínas: "/>

    <TextView
            android:id="@+id/caloriasTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorías: "/>

    <TextView
            android:id="@+id/azucarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azúcar: "/>

    <TextView
            android:id="@+id/grasaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grasa: "/>
</LinearLayout>
